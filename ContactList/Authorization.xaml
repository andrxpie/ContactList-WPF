<Window x:Class="ContactList.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactList"
        mc:Ignorable="d"
        Title="Authorization" Height="140" Width="300" FontFamily="Cascadia Code" Background="#FF5346A1" Foreground="White">
    <Grid Margin="0,0,0,5">
        <StackPanel Margin="10,10,10, 5">
            <TextBox Margin="0,0,0,5" x:Name="loginTextBox" Foreground="White" Background="MediumSlateBlue" />
            <TextBox Margin="0,0,0,5" x:Name="passwordTextBox" Background="MediumSlateBlue" Foreground="White" />
            <Button Margin="0,0,0,5" Click="Enter_Click" Content="Enter" Background="MediumSlateBlue" Foreground="White"></Button>
            <Button Margin="0,0,0,5" Click="Exit_Click" Content="Exit" Background="#FFFF0978" Foreground="White"></Button>
        </StackPanel>
    </Grid>
</Window>
