<Window x:Class="ContactList.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactList"
        mc:Ignorable="d"
        Title="New contact" Height="140" Width="300" FontFamily="Cascadia Code" Background="#FF5346A1" Foreground="White">
    <Grid Margin="0,0,0,5">
        <StackPanel Margin="10,10,10, 5">
            <TextBox Margin="0,0,0,5" x:Name="nameTextBox" Foreground="White" Background="MediumSlateBlue" />
            <TextBox Margin="0,0,0,5" x:Name="emailTextBox" Background="MediumSlateBlue" Foreground="White" />
            <TextBox Margin="0,0,0,5" x:Name="phoneTextBox" Foreground="White" Background="MediumSlateBlue" />
            <Button Content="Save" Click="Button_Click" Background="MediumSlateBlue" Foreground="White"></Button>
        </StackPanel>
    </Grid>
</Window>
