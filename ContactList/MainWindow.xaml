<Window x:Class="ContactList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactList"
        mc:Ignorable="d"
        Title="Contact List" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="New contact" Click="Button_Click" />
            <TextBox Margin="0 5" TextChanged="TextBox_TextChanged" />
            <ListView x:Name="contactListView" Height="365" Margin="0 5 0 0"
                      SelectionChanged="contactListView_SelectionChanged" />
            <ListView>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Left"  FontSize="20" FontWeight="Black" />
                        <TextBlock Text="{Binding Email}" HorizontalAlignment="Center" FontSize="15" FontWeight="Black" />
                        <TextBlock Text="{Binding Phone}" HorizontalAlignment="Right" FontSize="15" FontWeight="Black" />
                    </StackPanel>
                </DataTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
